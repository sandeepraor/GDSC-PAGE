<!-- signup form -->
<style>
  .form-control {
    margin-top: 12px;
    margin-bottom: 12px;
  }
</style>
<nav class="navbar" style="background-color: #f3f3f3">
  <div
    style="display: flex; align-items: center; justify-content: space-between"
  >
    <a class="navbar-brand mx-3" href="/" style="color: #337ab7">
      <b>GDSC UVCE </b></a
    >
  </div>
</nav>

<center>
  <div class="card my-5" style="width: 30rem">
    <div
      class="card-body"
      style="
        display: flex;
        justify-content: center;
        flex-direction: column;
        padding-top: 25px;
      "
    >
      <u><h2>Signup here!</h2></u>
      <form
        method="post"
        action="/signup"
        style="
          display: flex;
          justify-content: center;
          flex-direction: column;
          margin-top: 10px;
        "
      >
        <input
          type="text"
          name="name"
          class="form-control"
          required
          placeholder="Enter your name"
        />
        <!-- <input
          type="text"
          name="branch"
          class="form-control"
          required
          placeholder="Enter your branch"
        /> -->
        <select name="branch" id="branch" required class="form-control">
          <option disabled selected value>Enter Your Branch</option>
          <option value="CSE">CSE</option>
          <option value="ISE">ISE</option>
          <option value="AIML">AIML</option>
          <option value="ECE">ECE</option>
          <option value="EEE">EEE</option>
          <option value="MECH">MECH</option>
          <option value="CIVIL">CIVIL</option>
          <option value="ARCH">ARCH</option>
        </select>
        <!-- <input
          type="text"
          name="year"
          class="form-control"
          required
          placeholder="Enter your year"
        /> -->
        <select name="year" id="year" required class="form-control" aria-placeholder="Select Year">
          <option disabled selected>Enter Your Year</option>
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
        </select>
        <input
          type="text"
          name="instagram"
          class="form-control"
          placeholder="Enter your instagram username"
        />
        <input
          type="text"
          name="username"
          class="form-control"
          required
          placeholder="Enter your username"
        />
        <input
          type="password"
          name="password"
          class="form-control"
          required
          placeholder="Enter your password"
        />
        <div class="mt-3">
          <label
            ><input type="checkbox" name="shareInstagram"/> Display my
            Instagram handle</label
          >
          <!-- <input type="checkbox" name="shareInstagram" />
              <label>
                Display my Instagram handle on the Participant list page?</label
              > -->
        </div>
        <br />
        <input
          type="submit"
          value="Signup"
          class="btn btn-primary"
          style="background-color: #337ab7"
          onmouseover="this.style.backgroundColor='#336ab7'"
          onmouseout="this.style.backgroundColor='#337ab7'"
        />
      </form>
    </div>
  </div>
</center>
